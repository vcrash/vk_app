<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/touch_response_background"
    android:foreground="@drawable/touch_response"
    >
<!--    todo remove -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middle_guide"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33"
        />
    <TextView
        android:id="@+id/image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_min="wrap"
        android:textSize="@dimen/primaryTextSize"
        tools:text="BTC"
        android:gravity="center_vertical"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="@dimen/common_spacing"
        android:layout_marginStart="@dimen/double_spacing"
        android:layout_marginLeft="@dimen/double_spacing"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/middle_guide"
        app:layout_constraintRight_toLeftOf="@+id/middle_guide"
        app:layout_constraintBottom_toTopOf="@id/labels_barrier"
        />
    <TextView
        android:id="@+id/currency_descr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        tools:text="Description multiline "
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/common_spacing"
        android:layout_marginBottom="@dimen/common_spacing"
        android:layout_marginEnd="@dimen/double_spacing"
        android:layout_marginRight="@dimen/double_spacing"
        android:layout_marginStart="@dimen/common_spacing"
        android:layout_marginLeft="@dimen/common_spacing"
        app:layout_constraintStart_toEndOf="@id/image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/labels_barrier"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="image_view,currency_descr"
        />
    <View
        android:layout_width="0dp"
        style="@style/Divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labels_barrier"
        android:layout_marginTop="@dimen/common_spacing"
        />
</androidx.constraintlayout.widget.ConstraintLayout>